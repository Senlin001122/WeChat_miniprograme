.profile-page {
  background-color: #f5f5f5;
  padding: 10px;
  min-height: 80vh; /* 100vh 表示视口的 100% 高度 */
  box-sizing: border-box; /* 确保 padding 包含在高度内 */
}

.profile-header {
  display: flex;
  align-items: center;
  padding: 20px 10px;
  background-color: #ffffff;
  border-radius: 10px;
  margin-bottom: px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 15px;
}

.user-info {
  flex-grow: 1;
}

.username {
  font-size: 20px;
  font-weight: bold;
}

.user-details {
  display: flex;
  align-items: center;
  padding: 0;
  margin: 0;
  gap: 0px; /* 调整两个元素之间的间距 */
}

.user-id {
  font-size: 14px;
  color: #888;
  background-color: #e0f7fa;
  padding: 3px 6px;
  border-radius: 15px;
}

.update-avatar {
  color: #888;
  background-color: #e0f7fa;
  padding: 3px 6px !important;
  width: fit-content !important;
  border-radius: 15px;
  cursor: pointer;
  font-size: 14px;
  line-height: 1.5;
  font-weight: normal; /* 确保字体不加粗 */
  display: inline-block; /* 保持为行内块元素 */
  width: fit-content; /* 使宽度适应内容 */
}

.user-stats {
  display: flex;
  justify-content: space-around;
  padding: 15px 0;
  background-color: #ffffff;
  border-radius: 10px;
  margin-bottom: 15px;
  
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-count {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.stat-label {
  font-size: 14px;
  color: #888;
}

.profile-options {
  background-color: #ffffff;
  border-radius: 10px;
  padding: 10px 0;
  box-shadow: 0 1px 6px rgba(0.1, 0.1, 0.1, 0.2); /* 添加阴影 */
}

.option-item {
  padding: 15px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ddd !important; /* 强制添加分隔线 */
}

.option-item:last-child {
  border-bottom: none !important; /* 最后一项不需要分隔线 */
}

.option-status {
  color: #888;
  font-size: 14px;
}
